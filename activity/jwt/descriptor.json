{
  "name": "jwt",
  "author": "Andy Hampshire",
  "type": "flogo:activity",
  "ref": "github.com/ayh20/flogo-components/activity/jwt",
  "version": "0.1.4",
  "title": "Java Web Token Activity",
  "description": "Tool to Create (sign) a JWT, and Verify a JWT",
  "homepage": "https://github.com/ayh20/flogo-components/tree/master/activity/jwt",
  "display": {
    "description": "JWT Tools",
    "category": "Utility",
    "uid": "jwt",
    "visible": true
 },
  "inputs":[
    {
      "name": "token",
      "type": "string"
    },
    {
      "name": "header",
      "type": "string"
    },
    {
      "name": "payload",
      "type": "string"
    },
    {
      "name": "secret",
      "type": "string"
    },
    {
      "name": "mode",
      "required": true,
      "type": "string",
      "display": 
      {
          "type":"dropdown",
          "selection":"single"
      },
      "allowed" : ["Verify", "Sign", "Decode"]
    },
    {
      "name": "algorithm",
      "type": "string"
    }
  ],
  "outputs": [
    {
      "name": "token",
      "type": "string"
    },
    {
      "name": "valid",
      "type": "boolean"
    },
    {
      "name": "claims",
      "type": "string"
    }
  ]
}
