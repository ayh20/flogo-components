{
    "name": "mqtt",
    "type": "flogo:activity",
    "ref": "github.com/ayh20/flogo-components/activity/mqtt",
    "version": "0.9.1",
    "title": "Send MQTT Message with TLS Support  (AWS IoT, Eclipse Hono, Bosch IoT)",
    "description": "Pubishes messages to a MQTT topic with TLS  support",
    "author": "Andy Hampshire <ahampshi@tibco.com>",
    "input":[
     {
        "name": "broker",
        "required": true,
        "type": "string"
      },
      {
        "name": "id",
        "required": true,
        "type": "string"
      },
      {
        "name": "user",
        "type": "string"
      },
      {
        "name": "password",
        "type": "string"
      },
      {
        "name": "enabletls",
        "type": "boolean",
        "required": true,
        "allowed" : ["true", "false"]
      },
      {
        "name": "certstore",
        "type": "string"
      },
      {
        "name": "thing",
        "type": "string"
      },
      {
        "name": "topic",
        "required": true,
        "type": "string"
      },
      {
        "name": "qos",
        "type": "integer",
        "required": true,
        "allowed" : ["0", "1", "2"]
      },
      {
        "name": "message",
        "type": "any"
      }
    ],
    "output": [
      {
        "name": "result",
        "type": "string"
      }
    ]
  }